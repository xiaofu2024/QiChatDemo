<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/et_Line"
        android:hint="输入线路，用逗号分开"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText android:id="@+id/etWssCert"
        android:hint="输入访问证书 Cert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/etMerchanId"
        android:hint="输入商户Id"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/etUserId"
        android:hint="输入User Id"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/et_BaseImgUrl"
        android:hint="请输入UrlImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_Save"
        android:text="保存"
        android:layout_marginTop="10dp"
        android:layout_width="80dp"
        android:layout_height="50dp"></Button>
</LinearLayout>

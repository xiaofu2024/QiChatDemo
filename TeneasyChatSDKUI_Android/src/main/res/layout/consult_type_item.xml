<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_kefu_image"
        android:layout_width="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/group_25"
        app:civ_border_color="#80ffffff"
        android:layout_height="23dp" />

    <TextView
        android:id="@+id/tv_title"
        android:text="@string/str_kefu"
        app:layout_constraintLeft_toRightOf="@id/civ_kefu_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black4848"
        android:textSize="@dimen/sp_14" />

    <com.teneasy.chatuisdk.ui.RedDotView
        android:id="@+id/redDotView"
        app:layout_constraintStart_toEndOf="@id/tv_title"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="15dp"
        android:layout_height="15dp">
    </com.teneasy.chatuisdk.ui.RedDotView>


</androidx.constraintlayout.widget.ConstraintLayout>